.w-full
  - if notice.present?
    %p.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-md.inline-block{ id: :notice }
      = notice

  %h1.font-bold.text-4xl.mb-8= t('.title')

  %div#wines.min-w-full.divide-y.divide-gray-200.space-y-5
    .overflow-x-auto
      %table.daisy-table.daisy-table-zebra.daisy-table-pin-cols.daisy-table-pin-rows
        %thead
          %tr
            %td= t('.actions')
            %td= Entry.human_attribute_name(:wine)
            %th= Entry.human_attribute_name(:quantity)
            %td= Entry.human_attribute_name(:purchase_date)
            %td= Entry.human_attribute_name(:store)
            %td= Entry.human_attribute_name(:town)
        %tbody
          - @entries.each do |entry|
            %tr{ id: dom_id(entry) }
              %td
                %div{ class:"w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2" }
                  = link_to t('.show'), entry, class: "daisy-btn daisy-btn-primary daisy-btn-sm"
                  = link_to t('.edit'), edit_entry_path(entry), class: "daisy-btn daisy-btn-accent daisy-btn-sm"
              %td.font-bold= entry.wine.name
              %th.min-w-80= entry.quantity
              %td= entry.purchase_date
              %td= entry.store
              %td= entry.town
